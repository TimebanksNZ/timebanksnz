@model System.Collections.Generic.List<TimebanksNZ.DAL.Entities.User>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>UnapprovedUsers</title>
</head>
<body>
    <div> 
        @using(var form = Html.BeginForm("ApproveUsers", "Account", FormMethod.Post))
        { 
            @Html.AntiForgeryToken()
            for (int i = 0; i < Model.Count; i++)
            {
                @Html.Hidden("users[" + i + "].Id", Model[i].IdMember);
                @Html.CheckBox("users[" + i + "].IsApproved", Model[i].Approved);
                @Html.Raw("&nbsp;");
                @Html.Label("users[" + i + "].FirstName", Model[i].FirstName);
                @Html.Raw("&nbsp;");
                @Html.Label("users[" + i + "].LastName", Model[i].LastName);
                <br />
            }
        }
    </div>
</body>
</html>
